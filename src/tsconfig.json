{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "target": "es5",
    "sourceMap": true
  },
  "include": [
    "*",
    "typings/**.*"
  ]
}
